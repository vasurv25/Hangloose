<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:ignore="MissingPrefix">

    <include
            layout="@layout/layout_tutorial_background"
            android:id="@+id/include"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_location"
            android:textColor="@color/white"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:textAlignment="center"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_three"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/veg_nonveg_bar"
            android:textColor="@color/white"
            android:id="@+id/textView8"
            android:textAlignment="center"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginStart="160dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_two"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="200dp"
            android:layout_marginTop="85dp"
            app:layout_constraintTop_toTopOf="@+id/include"
            android:id="@+id/imageView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_section"
            android:textColor="@color/white"
            android:id="@+id/textView9"
            android:textAlignment="center"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            android:layout_marginStart="70dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_seven"
            android:id="@+id/imageView5"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_favourite"
            android:textColor="@color/white"
            android:id="@+id/textView10"
            android:textAlignment="center"
            fontPath="fonts/segoe_ui_italic.ttf"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            android:layout_marginEnd="70dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_six"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="350dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>