<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:ignore="MissingPrefix">

    <include
            layout="@layout/layout_tutorial_background"
            android:id="@+id/include"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_swipe"
            android:textColor="@color/white"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:textAlignment="center"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_swipe"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/variety_of_filters"
            android:textColor="@color/white"
            android:id="@+id/textView8"
            android:textAlignment="center"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_four"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/include"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/right_swipe"
            android:textColor="@color/white"
            android:id="@+id/textView9"
            android:textAlignment="center"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_swipe"
            android:id="@+id/imageView5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/include"
            android:layout_marginEnd="85dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like_profile_section"
            android:textColor="@color/white"
            android:id="@+id/textView10"
            android:textAlignment="center"
            fontPath="fonts/segoe_ui_italic.ttf"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_five"
            android:id="@+id/imageView6"
            android:rotation="300"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp"/>


</android.support.constraint.ConstraintLayout>